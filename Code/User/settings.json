				}
			},
			{
				"scope": ["constant.other.color.rgb-value.hex.css"],
				"settings": {
					"foreground": "#8080FF"
				}
			},
			{
				"scope": ["meta.selector.css"],
				"settings": {
					"foreground": "#D7BA7D"
				}
			},
			// SCSS
			{
				"scope": ["keyword.other.important"],
				"settings": {
					"foreground": "#9872A2"
				}
			},
			// C langauge
			{
				"scope": [
					"punctuation.section.arguments.begin.bracket.round.c",
