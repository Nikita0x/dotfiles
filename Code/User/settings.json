{
	//these 3 are needed to disable annying Alt key behavior.
	"window.enableMenuBarMnemonics": false,
	"window.titleBarStyle": "custom",
	"window.customMenuBarAltFocus": false,

	"workbench.layoutControl.enabled": false,
	"window.commandCenter": false,
	"typescript.suggest.autoImports": false,
	"javascript.suggest.autoImports": false,
	"terminal.integrated.defaultProfile.windows": "Git Bash",
	"editor.fontSize": 15,
	"editor.fontFamily": "Monospace",
	"editor.fontLigatures": true,
	"editor.linkedEditing": true,
	"editor.insertSpaces": true,
	"editor.tabSize": 4,
	"explorer.confirmDragAndDrop": false,
	"emmet.includeLanguages": {
		"vue": "html",
		"vue-html": "html",
		"javascript": "javascriptreact",
		"django-html": "html"
	},
	"workbench.list.smoothScrolling": true,
	"terminal.integrated.smoothScrolling": true,
	"editor.smoothScrolling": false,
	"editor.scrollBeyondLastLine": false,
	"editor.semanticHighlighting.enabled": true,
	"editor.guides.highlightActiveBracketPair": true,
	"editor.links": false,
	"typescript.updateImportsOnFileMove.enabled": "always",
	"javascript.updateImportsOnFileMove.enabled": "always",
	"editor.cursorStyle": "line-thin",
	"editor.cursorWidth": 3,
	"editor.cursorBlinking": "phase",
	"editor.bracketPairColorization.enabled": false,
	"editor.guides.bracketPairs": "active",
	"workbench.colorCustomizations": {
		"tab.activeBackground": "#00000090",
		"editorCursor.foreground": "#fff",
		"editor.background": "#1e1e1e",
		"editor.selectionBackground": "#000",
		"editorLineNumber.foreground": "#676867",
		"editorLineNumber.activeForeground": "#fff",
		//brackets and indentation color
		"editorBracketHighlight.foreground1": "#ffffff80",
		"editorBracketHighlight.foreground2": "#ffffff80",
		"editorBracketHighlight.foreground3": "#ffffff80",
		"editorBracketHighlight.foreground4": "#ffffff80",
		"editorBracketHighlight.foreground5": "#ffffff80",
		"editorBracketHighlight.foreground6": "#ffffff80",
		"statusBar.background": "#005f5f",
		"statusBar.noFolderBackground": "#005f5f",
		"statusBar.debuggingBackground": "#005f5f",
		"statusBar.foreground": "#ffffff",
		"statusBar.debuggingForeground": "#ffffff",

		// IN TESTING
		// occurances
		"editor.selectionHighlightBackground": "#3cff0042",
		// symbol highlight
		"editor.wordHighlightBackground": "#e900c62c",
		// strong symbol highlight (matching html tags)
		"editor.wordHighlightStrongBackground": "#1900ff85",

		// Подсветка при поиске (Ctrl+F) - currently selected
		"editor.findMatchBackground": "#000c9487",
		// all occurances
		"editor.findMatchHighlightBackground": "#f2ff0052"
	},
	"editor.formatOnSave": true,
	"explorer.confirmPasteNative": false,
	"workbench.sideBar.location": "right",
	"editor.stickyScroll.enabled": false,

	"security.workspace.trust.untrustedFiles": "open",
	"liveServer.settings.host": "localhost",
	"liveServer.settings.donotVerifyTags": true,
	"editor.detectIndentation": false,
	"editor.defaultFormatter": "justusadam.language-haskell",
	"editor.wordWrap": "bounded",
	"emmet.preferences": {},
	"errorLens.enabledDiagnosticLevels": [
		"error",
		"warning"
		// "info"
	],
	"git.openRepositoryInParentFolders": "never",
	"cSpell.languageSettings": [],
	"workbench.startupEditor": "none",
	"editor.fontVariations": false,
	"terminal.integrated.env.windows": {},
	"workbench.settings.useSplitJSON": true,
	"json.schemas": [],
	// CONVENTIONAL COMMITS SETTIGS
	// Skip prompts you don't want
	"conventionalCommits.promptScopes": false, // no scope step
	"conventionalCommits.promptFooter": false, // no footer (incl. BREAKING CHANGE / issues)
	"conventionalCommits.promptBody": false, // no body
	"conventionalCommits.gitmoji": false, // no emoji picker

	// optional: just fill message, don’t auto-commit
	"conventionalCommits.autoCommit": true,
	"explorer.openEditors.visible": 1,
	"cSpell.allowedSchemas": [
		"file",
		"gist",
		"sftp",
		"untitled",
		"vscode-notebook-cell",
		"vscode-scm",
		"vscode-userdata",
		"html"
	],
	"git.confirmSync": false,
	"git.enableSmartCommit": true,
	"[jsonc]": {},
	"javascript.inlayHints.variableTypes.suppressWhenTypeMatchesName": false,
	"githubPullRequests.createOnPublishBranch": "never",
	"git.openAfterClone": "always",
	"liveServer.settings.donotShowInfoMsg": true,
	"ecsstractor_port.bem_nesting": true,
	"ecsstractor_port.attributes": "className",
	"javascript.inlayHints.parameterNames.enabled": "all",
	"typescript.inlayHints.functionLikeReturnTypes.enabled": true,
	"typescript.inlayHints.enumMemberValues.enabled": true,
	"javascript.inlayHints.variableTypes.enabled": true,
	"typescript.inlayHints.parameterNames.enabled": "all",
	"typescript.inlayHints.parameterTypes.enabled": true,
	"editor.inlayHints.padding": true,
	"workbench.colorTheme": "Default Dark+",
	"prettier.tabWidth": 4,
	"prettier.singleAttributePerLine": true,
	"prettier.trailingComma": "all",
	"prettier.useTabs": true,
	"prettier.vueIndentScriptAndStyle": true,

	"editor.codeLensFontFamily": "PT Sans Narrow",
	"editor.multiCursorModifier": "ctrlCmd",
	"terminal.integrated.fontFamily": "monospace",
	"editor.cursorSurroundingLines": 8,
	"notebook.confirmDeleteRunningCell": false,
	"explorer.confirmDelete": false,
	"explorer.confirmUndo": "verbose",
	"[rust]": {
		"editor.defaultFormatter": "rust-lang.rust-analyzer"
	},
	"editor.hideCursorInOverviewRuler": true,
	"editor.inlayHints.enabled": "off",

	"terminal.integrated.env.linux": {},
	"git.ignoreRebaseWarning": true,
	//Custom syntax highlighter
	"editor.tokenColorCustomizations": {
		"functions": {
			// "fontStyle": "underline",
			"foreground": "#d97706"
		},
		"numbers": {
			"foreground": "#408080"
		},
		"keywords": {
			"foreground": "#9872A2"
			// "fontStyle": "italic"
		},
		"strings": {
			"foreground": "#9AA83A",
			"fontStyle": ""
		},
		"comments": "#525252",
		// Javascript / Typescript
		"textMateRules": [
			{
				"scope": "entity.name.type.class",
				"settings": {
					"foreground": "#4EC9B0",
					"fontStyle": "italic"
				}
			},
			{
				"scope": ["entity.name.type.interface"],
				"settings": {
					"foreground": "#53b20b",
					"fontStyle": ""
				}
			},
			{
				"scope": ["entity.name.type"],
				"settings": {
					"foreground": "#53b20b",
					"fontStyle": ""
				}
			},
			// types
			{
				"scope": ["support.type"],
				"settings": {
					"foreground": "#4EC9B0",
					"fontStyle": ""
				}
			},
			// colors for true / false
			{
				"scope": [
					"constant.language.boolean.false",
					"constant.language.boolean.true",
					"constant.language.json.comments",
					"constant.language.null",
					"constant.language.undefined",
					"constant.language.nan",
					"constant.language.infinity"
				],
				"settings": {
					"foreground": "#408080"
				}
			},
			// const
			{
				"scope": ["variable.other.constant"],
				"settings": {
					"foreground": "#3b8cb8"
				}
			},
			// this keyword, spread operator
			{
				"scope": [
					"variable.language.this",
					"keyword.operator.spread",
					"keyword.operator.rest"
				],
				"settings": {
					"foreground": "#C7444A"
				}
			},
			// arguments/parameters to a function
			{
				"scope": ["variable.parameter", "entity.name.type.parameter"],
				"settings": {
					"foreground": "#078448be",
					"fontStyle": "italic"
				}
			},
			// enum
			{
				"scope": ["entity.name.type.enum"],
				"settings": {
					"foreground": "#ffc85a"
				}
			},
			// enum member
			{
				"scope": ["variable.other.enummember"],
				"settings": {
					"foreground": "#9CDCFE"
				}
			},
			// IN PROGRESS: console, Math,
			// {
			// 	"scope": ["support.variable"],
			// 	"settings": {
			// 		"foreground": "#0d9c00"
			// 	}
			// },
			// other
			{
				"scope": [
					"punctuation.accessor",
					"punctuation.terminator.statement",
					"punctuation.definition.parameters.begin",
					"punctuation.definition.parameters.end",
					"punctuation.definition.typeparameters.begin",
					"punctuation.definition.typeparameters.end",
					"meta.brace.round",
					"meta.type.annotation",
					"punctuation.definition.block",
					"keyword.operator.type.annotation",
					"punctuation.separator.comma",
					"punctuation.separator.parameter",
					"keyword.operator.assignment",
					"meta.brace.square",
					"punctuation.definition.interpolation.begin.html.vue",
					"punctuation.definition.interpolation.end.html.vue",
					"punctuation.definition.binding-pattern.object.js",
					"punctuation.separator.key-value",
					"punctuation.terminator.rule",
					"punctuation.section.keyframes.begin.bracket.curly",
					"punctuation.section.keyframes.end.bracket.curly",
					"meta.property-value",
					"punctuation.section.property-list.begin.bracket.curly",
					"punctuation.section.property-list.end.bracket.curly",
					"punctuation.definition.binding-pattern",
					"keyword.operator.type.ts",
					"punctuation.definition.section.case-statement",
					"keyword.operator.bitwise",
					"keyword.operator.type.tsx",
					"punctuation.destructuring.tsx",
                    "punctuation.separator.label",
                    "punctuation.separator.label.ts"
				],
				"settings": {
					"foreground": "#676867"
				}
			},
			//logical operators: ||, &&, ??
			{
				"scope": ["keyword.operator.logical"],
				"settings": {
					"foreground": "#676867"
				}
			},
			// ternary operators: ?, :
			{
				"scope": ["keyword.operator.ternary"],
				"settings": {
					"foreground": "#676867"
				}
			},
			// relational operators: >, <
			{
				"scope": ["keyword.operator.relational"],
				"settings": {
					"foreground": "#676867"
				}
			},
			// comparison operators: !==, !=,  ==, ===
			{
				"scope": ["keyword.operator.comparison"],
				"settings": {
					"foreground": "#676867"
				}
			},
			// html tags < and >, />
			{
				"scope": [
					"punctuation.definition.tag.begin.html",
					"punctuation.definition.tag.end.html"
				],
				"settings": {
					"foreground": "#676867"
				}
			},
			// new operator, typeof operator, delete operator, instanceof
			{
				"scope": [
					"keyword.operator.new",
					"keyword.operator.expression.of",
					"keyword.operator.expression.delete",
					"keyword.operator.expression.instanceof",
					"keyword.operator.expression.infer",
					"keyword.operator.expression.is.ts"
				],
				"settings": {
					// "foreground": "#676867",
					"foreground": "#9872A2"
					// "fontStyle": "italic"
				}
			},
			// highlight key fields in object literals
			// {
			// 	// "scope": [
			// 	// 	"variable.other.property",
			// 	// 	"variable.other.property.js",
			// 	// 	"variable.other.object.property.js"
			// 	// ],
			// 	// "settings": {
			// 	// 	"foreground": "#ff0015",
			// 	// 	"fontStyle": "underline strikethrough"
			// 	// }
			// },

			// escape character
			{
				"scope": "constant.character.escape",
				"settings": {
					"foreground": "#8080FF"
				}
			},
			// keyword "in", dynamic import
			{
				"scope": [
					"keyword.operator.expression.in",
					"keyword.operator.expression.import",
					"keyword.operator.expression.typeof",
					"keyword.operator.expression.keyof.ts",
                    "keyword.operator.expression.keyof.tsx",
					"keyword.other.debugger"
				],
				"settings": {
					"foreground": "#9872A2"
				}
			},
			// extends keyword
			{
				"scope": "storage.modifier",
				"settings": {
					"foreground": "#9872A2"
				}
			},
			// async keyword
			{
				"scope": "storage.modifier.async",
				"settings": {
					"foreground": "#9872A2"
				}
			},
			// optional ? in func signature
			{
				"scope": "keyword.operator.optional",
				"settings": {
					"foreground": "#676867"
					// "fontStyle": "strikethrough",
				}
			},
			// arrow function
			{
				"scope": "storage.type.function.arrow",
				"settings": {
					"foreground": "#676867"
					// "foreground": "#d97706"
					// "fontStyle": "underline"
				}
			},
			// .value (vuejs)
			{
				"scope": "variable.other.constant.property",
				"settings": {
					"foreground": "#9CDCFE"
				}
			},
			// arithmetic operators
			{
				"scope": [
					"keyword.operator.arithmetic",
					"keyword.operator.increment",
					"keyword.operator.decrement"
				],
				"settings": {
					"foreground": "#F92672"
				}
			},
			// html attributes color
			{
				"scope": [
					"entity.other.attribute-name.html.vue",
					"entity.other.attribute-name.html",
					"punctuation.separator.key-value.html",
					"punctuation.definition.string.begin.html.vue",
					"punctuation.definition.string.end.html.vue",
					"punctuation.attribute-shorthand.event.html.vue",
					"punctuation.attribute-shorthand.bind.html.vue",
					"meta.attribute.directive.vue"
				],
				"settings": {
					"foreground": "#D0B344"
				}
			},
			// json settings
			{
				"scope": [
					"punctuation.definition.dictionary.begin.json.comments",
					"punctuation.definition.dictionary.end.json.comments",
					"punctuation.definition.array.begin.json.comments",
					"punctuation.definition.array.end.json.comments",
					"punctuation.separator.dictionary.key-value.json.comments"
				],
				"settings": {
					"foreground": "#676867"
				}
			},
			// CSS settings
			{
				"scope": [
					"entity.other.attribute-name.class.css",
					"meta.property-list.css",
					"entity.name.tag.css"
				],
				"settings": {
					"foreground": "#D0B344"
				}
			},
			{
				"scope": "support.type.property-name.css",
				"settings": {
					"foreground": "#676867",
					"fontStyle": ""
				}
			},
			{
				"scope": [
					"punctuation.section.property-list.begin.bracket.curly.css",
