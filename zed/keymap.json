// Zed keymap
//
// For information on binding keys, see the Zed
// documentation: https://zed.dev/docs/key-bindings
//
// To see the default key bindings run `zed: open default keymap`
// from the command palette.
[
  {
    "context": "Workspace",
    "bindings": {
      "space space": "file_finder::Toggle",
      "alt-j": "editor::MoveLineDown",
      "alt-k": "editor::MoveLineUp",
      "alt-right": "pane::ActivateNextItem",
      "alt-left": "pane::ActivatePrevItem",
      "alt-l": "pane::ActivateNextItem",
      "alt-h": "pane::ActivatePrevItem",
      "U": "vim::Redo",
      "\\": "workspace::ToggleRightDock",
      "ukrainian_ghe_with_upturn": "workspace::ToggleRightDock"
    }
  },
  {
    "context": "Editor",
    "bindings": {
      "ctrl-r": "editor::Hover",
      "tab": "pane::AlternateFile",
      //not working properly
      "ctrl-w": "pane::CloseActiveItem"
      // not working
      // "ctrl-insert": "command_palette::Toggle"
      // "j k": ["workspace::SendKeystrokes", "escape"]
      // "insert": "file_finder::Toggle",
    }
  }
]
